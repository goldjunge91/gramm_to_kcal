{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2017",
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["./*"]
        },
        "resolveJsonModule": true,
        "types": ["vitest/globals"],
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },

    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "./scripts",
        "scripts",
        "__mocks__",
        "cypress",
        "dist",
        "build",
        "coverage"
    ]
}
